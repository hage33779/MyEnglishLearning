<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- サーブレットの宣言 -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>myEnglishLearning.Login</servlet-class>
    </servlet>
    
    <servlet>
    	<servlet-name>Home</servlet-name>
    	<servlet-class>myEnglishLearning.Home</servlet-class>
	</servlet>
	
	<servlet>
    	<servlet-name>Learning</servlet-name>
    	<servlet-class>myEnglishLearning.Learning</servlet-class>
    </servlet>
    
	<servlet>
    	<servlet-name>WordList</servlet-name>
    	<servlet-class>myEnglishLearning.WordList</servlet-class>
	</servlet>
	
	<servlet>
    	<servlet-name>Result</servlet-name>
    	<servlet-class>myEnglishLearning.Result</servlet-class>
	</servlet>

    <!-- サーブレットのマッピング -->
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
    	<servlet-name>Home</servlet-name>
    	<url-pattern>/Home</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
    	<servlet-name>Learning</servlet-name>
    	<url-pattern>/Learning</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
    	<servlet-name>WordList</servlet-name>
    	<url-pattern>/WordList</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
    	<servlet-name>Result</servlet-name>
    	<url-pattern>/Result</url-pattern>
	</servlet-mapping>
    <!-- その他の設定や宣言 -->

</web-app>